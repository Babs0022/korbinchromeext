{
  "manifest_version": 3,
  "name": "VibePilot",
  "version": "1.0",
  "description": "Your AI agent for vibe-coding platforms.",
  "permissions": ["scripting", "activeTab", "tabs"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
