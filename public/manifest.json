{
  "manifest_version": 3,
  "name": "VibePilot",
  "version": "1.0",
  "description": "Your AI agent for vibe-coding platforms.",
  "permissions": ["activeTab", "scripting", "tabs"],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
